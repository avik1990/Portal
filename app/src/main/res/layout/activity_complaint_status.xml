<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@color/bordercolor1"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_consumer_no"
        android:id="@+id/msgcom"
        android:textColor="#6c0606"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:id="@+id/CompNo">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/userid"
            android:id="@+id/consID" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/star"
            android:layout_marginTop="20dp"
            android:id="@+id/star1"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:background="@drawable/spin_spinner_comlain"
            android:layout_centerVertical="true" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/consIDval"
            android:textSize="17dp"
            android:textStyle="bold"
            android:maxLength="12"
            android:hint="@string/_12_digit_consumer_id"
            android:inputType="textCapCharacters" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conNm"
                android:layout_gravity="center_horizontal"
                android:hint="@string/enter_name"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#050000" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="@string/submit"
            android:id="@+id/submit"
            android:background="@drawable/butn" />
    </LinearLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-300dp" />
</LinearLayout>

