<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Enter Details"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <Spinner
                android:id="@+id/spCANouber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Enter CA or Account No.*"
                android:padding="@dimen/_10sdp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editAccountno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Enter CA or Account No.*"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Enter Name *"
                android:padding="@dimen/_10sdp"
                android:singleLine="true" />


            <EditText
                android:id="@+id/editPhoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Enter phone no. *"
                android:padding="@dimen/_10sdp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"

                android:padding="@dimen/_10sdp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_10sdp" />

            <Spinner
                android:id="@+id/spSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editComplaint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ .\n"
                android:gravity="top"
                android:hint="Enter Complaint Details *"
                android:padding="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="top"
                android:hint="Please Enter Address of incident *"
                android:padding="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="SUBMIT"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>