<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layout"
    tools:context="com.cesu.itcc05.consumeportal.CollectionRequestActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_consumer_id"
        android:id="@+id/msgcom"
        android:textColor="#6c0606"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:id="@+id/CompNo"
            android:layout_marginTop="15sp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/userid"
                android:id="@+id/consID" />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/star"
                android:layout_marginTop="20dp"
                android:id="@+id/star1"/>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:background="@drawable/spin_spinner_comlain"
                android:layout_centerVertical="true" />

        </TableRow>



        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conNm"
                android:layout_gravity="center_horizontal"
                android:hint="@string/enter_name"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#050000" />
        </TableRow>

    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/next"
            android:id="@+id/next"

            android:background="@drawable/butn"
            android:layout_centerVertical="true"
            />
    </LinearLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-300dp" />
</RelativeLayout>
