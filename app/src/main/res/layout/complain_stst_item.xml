<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_complain_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complain_date_time"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_complain_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingEnd="5dp"
                app:layout_constraintStart_toEndOf="@+id/tv_complain_date"
                />
            <TextView
                android:id="@+id/tv_complain_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complain_id"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_date"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_complain_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_date"
                app:layout_constraintStart_toEndOf="@+id/tv_complain_id"
                />

            <TextView
                android:id="@+id/tv_complain_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaint_type"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_id_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_complain_type_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"

                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_id_value"
                app:layout_constraintStart_toEndOf="@+id/tv_complain_type"
                />

            <TextView
                android:id="@+id/tv_complain_sub_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaint_sub_type"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_type_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_complain_sub_type_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_type_value"
                app:layout_constraintStart_toEndOf="@+id/tv_complain_sub_type"
                />

            <TextView
                android:id="@+id/tv_complaint_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaint_details"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_sub_type_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_complaint_details_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_complain_sub_type_value"
                app:layout_constraintStart_toEndOf="@+id/tv_complaint_details"
                />

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_taken"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_complaint_details_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_action_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_complaint_details_value"
                app:layout_constraintStart_toEndOf="@+id/tv_action"
                />
            <TextView
                android:id="@+id/tv_revised_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resolve_date_time"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_action_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_revised_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:paddingEnd="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_action_value"
                app:layout_constraintStart_toEndOf="@+id/tv_revised_date"
                />
            <TextView
                android:id="@+id/tv_comp_sts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaint_status"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_revised_date_value"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_comp_sts_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Center ID:"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_revised_date_value"
                app:layout_constraintStart_toEndOf="@+id/tv_comp_sts"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_image"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>