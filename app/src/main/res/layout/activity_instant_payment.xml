<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        android:visibility="gone"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/iv_backs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_chevron_left_24"
        app:layout_constraintTop_toTopOf="@+id/iv_logo"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/iv_logo"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/iv_backs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:background="@drawable/logo_new"

        />

    <TextView
        android:id="@+id/tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/payment"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_provide_details_to_proceed"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="italic"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_text"
        android:background="@drawable/rectangular_shape"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/userid"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            />
        <EditText
            android:id="@+id/consIDval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_consumer_number"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:maxLength="12"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/cl_cons"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/cl_cons"
        app:layout_constraintBottom_toBottomOf="@+id/cl_cons"
        android:id="@+id/hint"
        android:background="@drawable/hint"
        android:layout_marginLeft="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_cons"
        android:background="@drawable/rectangular_shape"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_user1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user1"
            />
        <EditText
            android:id="@+id/mobval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_phoner_number"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:maxLength="10"
            android:textSize="@dimen/_12sdp"

            android:imeOptions="actionNext"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_phone"
        android:text="@string/sms_communication_sent_to_this_number"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_text"
        android:background="@drawable/rectangular_shape"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_user2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user2"
            />
        <EditText
            android:id="@+id/emailval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_email_id"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:textSize="@dimen/_12sdp"

            android:imeOptions="actionDone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_mail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tblrw">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tmcnd"
            android:checked="true" />
        <TextView
            android:id="@+id/tncLabel"
            android:layout_width="wrap_content"
            android:autoLink="all"
            android:text="@string/agree_to_terms_amp_conditions"
            android:textSize="14dp"
            android:textColor="#030000"
            android:layout_height="wrap_content"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/know_more"
            android:id="@+id/bttrmscnd"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp" />
    </TableRow>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tblrw"
        app:layout_goneMarginTop="20dp"
        android:background="@drawable/rectangular_shape_primary"
        android:layout_marginTop="20dp"
        android:text="@string/next"
        android:textColor="@color/White"
        android:textAllCaps="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
